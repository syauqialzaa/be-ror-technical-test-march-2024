<div class="max-w-2xl mx-auto mt-8">
  <div class="text-3xl font-bold mb-4 text-center">Table Of Books</div>

  <% if user_signed_in? %>
    <div class="mb-4">
      <%= render partial: 'books_table' %>
    </div>
    <%= paginate @books %>

    <div class="mt-4">
      <%= link_to 'Insert Book', new_book_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "ml-2 bg-red-500 hover:bg-red-700 text-white py-2 px-4 rounded" %>
    </div>
  <% else %>
    <div class="mb-4">
      <%= render partial: 'books_table' %>
    </div>
    <%= paginate @books %>

    <div class="mt-4">
      <%= link_to 'Sign In', new_user_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
